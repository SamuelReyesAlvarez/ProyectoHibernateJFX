<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<!-- @author Samuel Reyes Alvarez -->

<BorderPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dam.samuel.vista.ControladorRegistroJuego">
   <top>
      <Pane prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #273746;" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="14.0" layoutY="12.0" text="Registro Nuevo Juego" textFill="#dddddd">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children></Pane>
   </top>
   <bottom>
      <Pane prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #273746;" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="14.0" layoutY="12.0" mnemonicParsing="false" onAction="#volver" prefHeight="25.0" prefWidth="25.0" text="&lt;" />
            <Label layoutX="39.0" layoutY="16.0" text="Volver al menu" textFill="#dddddd">
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
            <Button layoutX="222.0" layoutY="12.0" mnemonicParsing="false" onAction="#registrar" text="Registrar" />
         </children></Pane>
   </bottom>
   <center>
      <GridPane style="-fx-background-color: #273746;" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="120.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <FlowPane alignment="CENTER" prefHeight="30.0" prefWidth="300.0" GridPane.rowIndex="1">
               <children>
                  <Label prefWidth="91.0" text="Estilo de juego:" textFill="#dddddd">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </Label>
                  <ComboBox fx:id="comboEstilo" prefWidth="158.0">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </ComboBox>
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" prefHeight="30.0" prefWidth="300.0">
               <children>
                  <TextField fx:id="textoNombre" alignment="CENTER" prefWidth="250.0" promptText="Nombre del juego" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" prefHeight="30.0" prefWidth="300.0" GridPane.rowIndex="2">
               <children>
                  <Label prefWidth="73.0" text="Publicación:" textFill="#dddddd" />
                  <DatePicker fx:id="datePublicacion" prefWidth="176.0" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" prefHeight="120.0" prefWidth="300.0" GridPane.rowIndex="3">
               <children>
                  <TextArea fx:id="textoDescripcion" prefHeight="120.0" prefWidth="250.0" promptText="Descripción del juego" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" prefHeight="30.0" prefWidth="300.0" GridPane.rowIndex="4">
               <children>
                  <Label prefWidth="144.0" text="Precio de venta en €uros:" textFill="#dddddd" />
                  <TextField fx:id="textoPrecio" prefWidth="105.0" promptText="Ejemplo: 12.95" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" prefHeight="30.0" prefWidth="300.0" GridPane.rowIndex="5">
               <children>
                  <Label prefWidth="85.0" text="Desarrollador:" textFill="#dddddd" />
                  <TextField fx:id="textoDesarrolladores" prefWidth="165.0" promptText="Para varios, separe con &quot;,&quot;" />
               </children>
            </FlowPane>
         </children>
      </GridPane>
   </center>
</BorderPane>
